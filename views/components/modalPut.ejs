<section class="modal-overlay" id="overlay">
    <div class="modal" id="modal">
        <div class="modal-header">
            <h3>Atualizar Pokemon</h3>
            <a href="/" id="close-modal-put">X</a>
        </div>
        <div  class="modal-body">
            <form class="form-modal" action="/update/<%= pokemonPut.id %>" method="post">

                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" value="<%= pokemonPut.nome %>">

                <label for="descricao">Descrição:</label>
                <input type="text" id="descricao" name="descricao" value="<%= pokemonPut.descricao %>">

                <label for="tipo">Tipo:</label>
                <input type="text" id="tipo" name="tipo" value="<%= pokemonPut.tipo %>">

                <label for="imagem">Link da imagem:</label>
                <input type="text" id="imagem" name="imagem" value="<%= pokemonPut.imagem %>">

                <label for="altura">Altura:</label>
                <input type="text" id="altura" name="altura">

                <label for="peso">Peso:</label>
                <input type="text" id="peso" name="peso">

                <label for="categoria">Categoria:</label>
                <input type="text" id="categoria" name="categoria">

                <label for="habilidade">Habilidade:</label>
                <input type="text" id="hablidade" name="habilidade">

                <button onclick="cadastro()" type="submit">Atualizar</button>
                <!-- <p class='msg-success'> Usuário Cadastrado com sucesso!</p> -->
            </form>
        </div>
    </div>   
</section>